doctype html
html(lang="de")
  head
    include meta.pug
    block pageTitle
    link(rel="stylesheet", href="assets/css/all.css")
    link(rel="shortcut icon" type="image/x-icon" href="assets/img/favicon.ico")
    link(rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png")
    link(rel="icon" type="image/png" href="assets/img//favicon.png" sizes="96x96")
    
    script.
      var _paq = _paq || [];
      _paq.push(['trackPageView']);
      _paq.push(['enableLinkTracking']);
      (function() {
        var u="https://reporting.breitbachrock.de/";
        _paq.push(['setTrackerUrl', u+'piwik.php']);
        _paq.push(['setSiteId', '2']);
        var d=document, g=d.createElement('script'), s=d.getElementsByTagName('script')[0];
        g.type='text/javascript'; g.async=true; g.defer=true; g.src=u+'piwik.js'; s.parentNode.insertBefore(g,s);
      })(); 
    
  body
    input#sidebarToggle(type="checkbox" name="" value="")
    
    div.sideBar
      block navBar
      
    label.toggle(for="sidebarToggle")
      div.menu-burger-ico
        include icons/menu_ico.svg
        
      div.close-menu-ico
        include icons/cross_ico.svg 
    
    div.pageContent
      div.backgroundWrapper
    
      header
        div.headerWrapper
          block navBar
          block headerTitle

      block mainContent
      
      footer
        div.footerContent
          section.logo
            a(href=".")
              div.bbr-logo.footer-logo
                include logo.svg
            
          section.links #[a(href="impressum.html") Impressum] | #[a(href="agb.html") AGB] | #[a(href="datenschutzhinweise.html") Datenschutz]
          section.socialmedia
            a(href="https://www.instagram.com/breitbachrock" target="_blanc")
              div.socialButton
                include icons/instagram.svg
            a(href="https://www.facebook.com/breitbachrock" target="_blanc")
              div.socialButton
                include icons/facebook.svg
            a(href="https://www.youtube.com/channel/UCXkACWPkJoTh3vMMJDJo2DQ" target="_blanc")
              div.socialButton
                include icons/youtube.svg
