doctype html
html(lang="de")
  head
    include meta.jade
    block pageTitle
    link(rel="stylesheet", href="assets/css/all.css")
    link(rel="shortcut icon" type="image/x-icon" href="assets/img/favicon.ico")
    
  body
    input#sidebarToggle(type="checkbox" name="" value="")
    
    div.sideBar
      block navBar
      
    label.toggle(for="sidebarToggle")
      div.menu-burger-ico
        include icons/menu_ico.svg
        
      div.close-menu-ico
        include icons/cross_ico.svg 
    
    div.pageContent
      div.backgroundWrapper
    
      header
        div.headerWrapper
          block navBar

      block mainContent
      
      footer
        div.footerContent
          section.logo
            a(href="/")
              div.bbr-logo.footer-logo
                include logo.svg
            
          section.links #[a(href="/impressum.html") Impressum] | #[a(href="/agb.html") AGB] | #[a(href="/jugendschutzhinweise.html") Jugendschutz]
          section.socialmedia
            a(href="https://www.facebook.com/breitbachrock" target="_blanc")
              div.socialButton
                include icons/facebook.svg
            a(href="https://www.twitter.com/breitbachrock" target="_blanc")
              div.socialButton
                include icons/twitter.svg
            a(href="https://www.instagram.com/breitbachrock" target="_blanc")
              div.socialButton
                include icons/instagram.svg
            a(href="https://www.youtube.com/channel/UCXkACWPkJoTh3vMMJDJo2DQ" target="_blanc")
              div.socialButton
                include icons/youtube.svg
                
                
      
      
      
